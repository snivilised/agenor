  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Venus CLI",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/test/cmd/venus/main.go",
      "args": ["-path", "RETRO-WAVE", "-pattern", "*|flac"],
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "Debug(root) Venus CLI",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/test/cmd/venus/main.go",
      "args": ["-path", ".", "-pattern", "*|flac"],
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "Debug Nexus(c) CLI",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/examples/nexus/main.go",
      "args": ["-path", "bass/DUB", "-filter", "RETRO-WAVE,bass", "-pattern", "*|flac", "-now", "4", "-delay", "2"],
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${fileDirname}"
    }
  ]
}