{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-venus",
      "type": "shell",
      "command": "go",
      "args": [
        "build",
        "-o",
        "${workspaceFolder}/test/cmd/venus/venus",
        "${workspaceFolder}/test/cmd/venus/main.go"
      ],
      "group": "build",
      "problemMatcher": ["$go"]
    },
    {
      "label": "Run Venus CLI",
      "type": "shell",
      "command": "go",
      "args": [
        "run",
        "${workspaceFolder}/test/cmd/venus/main.go",
        "-path",
        "RETRO-WAVE",
        "-pattern",
        "*|flac"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$go"
      ]
    }
  ]
}
